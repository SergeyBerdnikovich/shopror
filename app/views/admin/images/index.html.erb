<h1>Listing images</h1>

<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Size</th>
    <td>Created at</td>

    <th></th>
    <th></th>
    <th></th>
  </tr>
Images count: <%= @images.size %>
<% @images.each do |image| %>
  <tr>
    <td><%= image_tag image.photo.url(:small) %></td>
    <td><%= image.photo_file_name %></td>
    <td><%= image.photo_file_size %></td>
    <td><%= image.created_at %></td>

    <td><%= link_to 'Show', admin_image_path(image) %></td>
    <td><%= link_to 'Edit', edit_admin_image_path(image) %></td>
    <td><%= link_to 'Destroy', admin_image_path(image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

